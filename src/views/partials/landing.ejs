<section class="container" id="landing">
    <div class="row justify-content-center mx-0">
        <form id="landing-form">
            <div class="form-floating mb-3">
                <h2><label for="playerName">Choose your Name</label></h2>
                <input type="text" class="form-control input" id="playerName" placeholder="Choose your Name" required>
            </div>
            <div class="row justify-content-center mx-0">
                <input id="landingAction" type="hidden" value="<%= roomID ? 'playGame' : 'createRoom' %>">
                <input class="btn btn-primary" type="submit" value="<%= roomID ? 'Join Room' : 'Create Private Room' %>">
            </div>
        </form>
    </div>
</section>